<UserControl
    x:Class="NetworkService.Views.NetworkEntitiesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/svg"
    xmlns:local="clr-namespace:NetworkService.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="956"
    d:DesignWidth="440"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="All entities" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Margin="10,0,10,0"
                Orientation="Horizontal">
                <ComboBox
                    x:Name="cmbBoxTypes"
                    Width="110"
                    ItemsSource="{Binding EntityTypes}"
                    SelectedItem="{Binding SelectedTypeFilter}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <!--<StackPanel Margin="5" Orientation="Horizontal">
                                <Image
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    Source="{Binding UrlImage}" />-->
                            <TextBlock VerticalAlignment="Center" Text="{Binding Type}" />
                            <!--</StackPanel>-->
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>


                <StackPanel Margin="5,0,5,0" Orientation="Horizontal">
                    <RadioButton
                        x:Name="rdoBtnLower"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Content="&lt;"
                        IsChecked="{Binding LowerFilter}" />
                    <RadioButton
                        x:Name="rdoBtnBigger"
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Content="&gt;"
                        IsChecked="{Binding HigherFilter}" />
                    <RadioButton
                        x:Name="rdoBtnAsc"
                        VerticalAlignment="Center"
                        Content="="
                        IsChecked="{Binding EqualFilter}" />
                </StackPanel>
                <TextBox
                    x:Name="txtBoxFilter"
                    Width="120"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Text="{Binding IdFilter}" />
                <Button
                    x:Name="btnApplyFilter"
                    Width="65"
                    VerticalAlignment="Center"
                    Command="{Binding SearchCommand}"
                    Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,5,0" Text="Search" />
                        <fa:SvgAwesome
                            Width="16"
                            Height="16"
                            Icon="Solid_MagnifyingGlass" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <DataGrid
                x:Name="dataGridEntities"
                Grid.Row="1"
                Margin="10"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserResizeRows="False"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding Servers}"
                SelectedItem="{Binding SelectedEntity}"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="0.5*"
                        Binding="{Binding Id}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="Name" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Type.Type}"
                        Header="Type" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding IpAddress}"
                        Header="IP Address" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Value}"
                        Header="Value" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel
                Grid.Row="2"
                Width="420"
                Orientation="Horizontal">
                <Grid Width="420">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="140" />

                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Width="100"
                        Height="40"
                        Command="{Binding ResetFilterCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:SvgAwesome
                                Width="16"
                                Height="16"
                                Margin="0,0,5,0"
                                Icon="Solid_RotateRight" />
                            <TextBlock Text="Restart" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Column="3"
                        Width="100"
                        Height="40"
                        Command="{Binding DeleteEntitityCommand}"
                        Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <fa:SvgAwesome
                                Width="16"
                                Height="16"
                                Margin="0,0,5,0"
                                Icon="Solid_TrashCan" />
                            <TextBlock Text="Delete" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="Add entity" />

            <StackPanel Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="10"
                        VerticalAlignment="Center"
                        Text="Name:" />

                    <TextBox
                        x:Name="txtBoxName"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10"
                        VerticalAlignment="Center"
                        Text="{Binding NewServer.Name, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="10"
                        VerticalAlignment="Center"
                        Text="Value:" />

                    <TextBox
                        x:Name="txtBoxValue"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10"
                        VerticalAlignment="Center"
                        Text="{Binding NewServer.Value, Mode=TwoWay}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10"
                        VerticalAlignment="Center"
                        Text="IP address" />

                    <TextBox
                        x:Name="txtBoxIP"
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="10"
                        VerticalAlignment="Center"
                        Text="{Binding NewServer.IpAddress, Mode=TwoWay}" />


                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="10"
                        VerticalAlignment="Center"
                        Text="Type:" />

                    <ComboBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="10"
                        ItemsSource="{Binding EntityTypes}"
                        SelectedIndex="0"
                        SelectedItem="{Binding NewServer.Type, Mode=TwoWay}">

                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <Image
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,5,0"
                                        Source="{Binding UrlImage}" />
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Type}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>

                    </ComboBox>


                    <Button
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="100"
                        Height="40"
                        Margin="10,10,25,10"
                        HorizontalAlignment="Right"
                        Command="{Binding AddEntity}">
                        <StackPanel Orientation="Horizontal">
                            <fa:SvgAwesome
                                Width="16"
                                Height="16"
                                Margin="0,0,5,0"
                                Icon="Solid_Check" />
                            <TextBlock Text="Add" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
