<UserControl
    x:Class="NetworkService.Views.NetworkDisplayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NetworkService.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="clr-namespace:NetworkService.Model"
    d:DesignHeight="956"
    d:DesignWidth="440"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="10,10,10,0"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Network Display" />
        <TreeView
            Grid.Row="1"
            Margin="10"
            ItemsSource="{Binding SviServeri}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type root:ServersByType}" ItemsSource="{Binding Servers}">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="50"
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            Source="{Binding ServerType.UrlImage}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding ServerType.Type}" />
                        <TextBlock VerticalAlignment="Center" Text=" (" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Servers.Count}" />
                        <TextBlock VerticalAlignment="Center" Text=")" />
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type root:Server}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text=" - " />
                        <TextBlock Text="{Binding IpAddress}" />

                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>

        <Grid Grid.Row="2" Margin="10" Background="Yellow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Canvas
                Grid.Row="0"
                Grid.Column="0"
                Width="80"
                Height="80"
                Background="AliceBlue"
                DockPanel.Dock="Top">
                <TextBlock Canvas.Top="60" Text="Router" />
            </Canvas>

            <Canvas
               
                Grid.Row="1"
                Grid.Column="0"
                Width="80"
                Height="80"
                Background="AliceBlue" />
            <Canvas
                Grid.Row="2"
                Grid.Column="0"
                Width="80"
                Height="80"
                Background="AliceBlue" />

            <Canvas
                Grid.Row="0"
                Grid.Column="1"
                Width="80"
                Height="80"
                Background="AliceBlue" />

            <Canvas
                Grid.Row="1"
                Grid.Column="1"
                Width="80"
                Height="80"
                Background="AliceBlue" />

            <Canvas
                Grid.Row="2"
                Grid.Column="1"
                Width="80"
                Height="80"
                Background="AliceBlue" />

            <Canvas
                Grid.Row="0"
                Grid.Column="2"
                Width="80"
                Height="80"
                Background="AliceBlue" />
            <Canvas
                Grid.Row="1"
                Grid.Column="2"
                Width="80"
                Height="80"
                Background="AliceBlue" />
            <Canvas
                Grid.Row="2"
                Grid.Column="2"
                Width="80"
                Height="80"
                Background="AliceBlue" />

            <Canvas
                Grid.Row="0"
                Grid.Column="3"
                Width="80"
                Height="80"
                Background="AliceBlue" />

            <Canvas
                Grid.Row="1"
                Grid.Column="3"
                Width="80"
                Height="80"
                Background="AliceBlue" />

            <Canvas
                Grid.Row="2"
                Grid.Column="3"
                Width="80"
                Height="80"
                Background="AliceBlue" />


        </Grid>
    </Grid>
</UserControl>
